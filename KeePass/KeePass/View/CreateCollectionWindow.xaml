<Window x:Class="KeePass.View.CreateCollectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeePass.View"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Height="150" Width="300" Background="#000000">
    <StackPanel Orientation="Vertical">
        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}" x:Name="CollectionNameTextBox"
                 Margin="10px" Foreground="#ffffff" md:HintAssist.Hint="Collection name"></TextBox>
        <Button HorizontalAlignment="Center" Padding="25 0" 
                Content="Create" x:Name="CreateBtn"></Button>
    </StackPanel>
</Window>
