<Page x:Class="KeePass.View.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KeePass.View.Pages" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <StackPanel Orientation="Vertical">
        <PasswordBox Name="MasterPasswordPasswordBox" md:HintAssist.Hint="Password" Foreground="#fdffff" Margin="20px" Style="{StaticResource MaterialDesignOutlinedPasswordBox}"></PasswordBox>
        <PasswordBox Name="MasterPasswordRepeatPasswordBox" md:HintAssist.Hint="Repeat Password" Foreground="#fdffff" Margin="20px" Style="{StaticResource MaterialDesignOutlinedPasswordBox}"></PasswordBox>
        <Button Name="RegisterBtn" HorizontalAlignment="Center" Padding="20,0">Register</Button>
    </StackPanel>
</Page>
